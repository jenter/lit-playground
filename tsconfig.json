{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "ES2015",
    // "removeComments": true,
    // "module": "commonjs",
    "module": "CommonJS",
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "ES2016",
      "es2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "*": ["node_modules/*"]
    }
  },
  "exclude": ["node_modules", "./dist"],
  "include": ["src/**/*", "domjs.ts", "domjs.ts"]
}
